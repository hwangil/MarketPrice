<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="시장을 선택해주세요"
            android:textSize="25sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/dialog_cancelBtn"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/x_icon" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:background="#b4b3b3" />

    <ScrollView
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="10"
        android:fillViewport="true">
        <ListView
            android:id="@+id/findParkingListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:dividerHeight="3dp"
            android:listSelector="#46d5d5d5"/>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/findParkingButton"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:backgroundTintMode="screen"
            android:text="주변 주차장 길찾기"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>